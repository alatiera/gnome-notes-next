<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="GnWindow" parent="GtkApplicationWindow">
    <property name="width-request">400</property>
    <property name="height-request">300</property>

    <!-- Headerbar -->
    <child type="titlebar">
      <object class="GtkHeaderBar" id="header_bar">
        <property name="title" translatable="1">New and Recent</property>
        <property name="can-focus">1</property>
        <property name="show-title-buttons">1</property>

        <child type="title">
          <object class="GtkStackSwitcher" id="stack_switcher">
            <property name="stack">main_stack</property>
          </object>
        </child>

        <!-- Back/New buttons -->
        <child>
          <object class="GtkStack" id="navigate_button_stack">
            <property name="homogeneous">0</property>
            <child>
              <object class="GtkButton" id="new_button">
                <property name="label" translatable="1">New</property>
                <signal name="clicked" handler="gn_window_open_new_note" swapped="1"/>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="back_button">
                <property name="icon-name">go-previous-symbolic</property>
                <signal name="clicked" handler="gn_window_show_previous_view" swapped="1"/>
                <child internal-child="accessible">
                  <object class="AtkObject">
                    <property name="accessible-name" translatable="1">Back</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>

        <child>
          <object class="GtkSpinner" id="loading_spinner"/>
        </child>

        <child>
          <object class="GtkToggleButton" id="search_button">
            <property name="icon-name">edit-find-symbolic</property>
            <child internal-child="accessible">
              <object class="AtkObject">
                <property name="accessible-name" translatable="1">Search</property>
              </object>
            </child>
          </object>
          <packing>
            <property name="position">2</property>
            <property name="pack-type">end</property>
          </packing>
        </child>

        <!-- List/Grid view buttons -->
        <child>
          <object class="GtkStack" id="view_button_stack">
            <property name="visible" bind-source="select_button" bind-property="visible"
                      bind-flags="sync-create"/>
            <child>
              <object class="GtkButton" id="grid_button">
                <property name="tooltip-text" translatable="1">View items in a grid</property>
                <property name="icon-name">view-grid-symbolic</property>
                <signal name="clicked" handler="gn_window_view_button_toggled" swapped="1"/>
                <child internal-child="accessible">
                  <object class="AtkObject">
                    <property name="accessible-name" translatable="1">Grid View</property>
                  </object>
                </child>
              </object>
            </child>

            <child>
              <object class="GtkButton" id="list_button">
                <property name="tooltip-text" translatable="1">View items in a list</property>
                <property name="icon-name">view-list-symbolic</property>
                <signal name="clicked" handler="gn_window_view_button_toggled" swapped="1"/>
                <child internal-child="accessible">
                  <object class="AtkObject">
                    <property name="accessible-name" translatable="1">List View</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
          <packing>
            <property name="position">1</property>
            <property name="pack-type">end</property>
          </packing>
        </child> <!-- ./GtkStack view_button_stack -->

        <child>
          <object class="GtkStack" id="select_button_stack">
            <property name="homogeneous">0</property>
            <child>
              <object class="GtkButton" id="select_button">
                <property name="tooltip-text" translatable="1">Enable selection mode</property>
                <property name="icon-name">object-select-symbolic</property>
                <signal name="clicked" handler="gn_window_selection_mode_toggled" swapped="1"/>
                <child internal-child="accessible">
                  <object class="AtkObject">
                    <property name="accessible-name" translatable="1">Enable selection mode</property>
                  </object>
                </child>
              </object>
            </child>

            <child>
              <object class="GtkButton" id="cancel_button">
                <property name="label" translatable="1">Cancel</property>
                <property name="visible" bind-source="select_button" bind-property="visible"
                          bind-flags="default|bidirectional|invert-boolean"/>
                <signal name="clicked" handler="gn_window_selection_mode_toggled" swapped="1"/>
              </object>
            </child>
          </object> <!-- ./GtkStack select_button_stack -->
          <packing>
            <property name="position">0</property>
            <property name="pack-type">end</property>
          </packing>
        </child>

      </object> <!-- ./GtkHeaderBar -->
    </child>

    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>

        <child>
          <object class="GtkSearchBar" id="search_bar">
            <property name="search-mode-enabled" bind-source="search_button"
                      bind-property="active" bind-flags="sync-create|bidirectional"/>
            <signal name="notify::search-mode-enabled" handler="gn_window_search_mode_changed"
                    swapped="1"/>
            <child>
              <object class="GtkSearchEntry" id="search_entry">
                <property name="width-chars">50</property>
                <signal name="search-changed" handler="gn_window_search_changed"
                        swapped="1"/>
              </object>
            </child>
          </object>
        </child>

        <child>
          <object class="GtkOverlay">

            <child type="overlay">
              <object class="GtkRevealer" id="undo_revealer">
                <property name="halign">center</property>
                <property name="valign">start</property>
                <child>
                  <object class="GtkFrame">
                    <style>
                     <class name="app-notification"/>
                    </style>
                    <child>
                      <object class="GtkBox">
                        <property name="spacing">10</property>
                        <child>
                          <object class="GtkLabel" id="undo_revealer_label">
                            <property name="hexpand">1</property>
                            <property name="halign">start</property>
                            <property name="label" translatable="1">Some items Deleted</property>
                            <style>
                             <class name="notification-label"/>
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton">
                            <property name="focus-on-click">0</property>
                            <property name="label" translatable="1">_Undo</property>
                            <property name="use-underline">1</property>
                            <signal name="clicked" handler="gn_window_cancel_delete" swapped="1"/>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton">
                            <property name="focus-on-click">0</property>
                            <property name="relief">none</property>
                            <property name="icon-name">window-close-symbolic</property>
                            <signal name="clicked" handler="gn_window_continue_delete" swapped="1"/>
                          </object>
                        </child>
                      </object>
                    </child> <!-- ./GtkBox -->
                  </object>
                </child> <!-- ./GtkFrame -->
              </object>
            </child>

            <child>
              <object class="GtkStack" id="main_stack">
                <signal name="notify::visible-child" handler="gn_window_main_view_changed" swapped="1"/>
                <child>
                  <object class="GtkStack" id="notes_stack">
                    <property name="expand">1</property>
                    <property name="visible-child-name" bind-source="notes_view"
                              bind-property="content-status" bind-flags="sync-create"/>

                    <!-- Empty notes view -->
                    <child>
                      <object class="GnEmptyView">
                      </object>
                      <packing>
                        <property name="name">empty</property>
                      </packing>
                    </child>

                    <child>
                      <object class="GtkScrolledWindow">
                        <signal name="edge-reached" handler="gn_window_load_more_items" swapped="1"/>
                        <child>
                          <object class="GtkFrame">
                            <style>
                             <class name="content-view"/>
                            </style>
                            <child>
                              <object class="GnMainView" id="notes_view">
                                <signal name="item-activated" handler="gn_window_item_activated" swapped="1"/>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                      <packing>
                        <property name="name">non-empty</property>
                      </packing>
                    </child>

                  </object>
                  <packing>
                    <property name="name">notes</property>
                    <property name="title" translatable="1">Notes</property>
                  </packing>
                </child>

                <child>
                  <object class="GtkStack" id="notebook_stack">
                  </object>
                  <packing>
                    <property name="name">notebooks</property>
                    <property name="title" translatable="1">Notebooks</property>
                  </packing>
                </child>

                <child>
                  <object class="GtkStack" id="trash_stack">
                    <property name="visible-child-name" bind-source="trash_view"
                              bind-property="content-status" bind-flags="sync-create"/>

                    <!-- Empty trash view -->
                    <child>
                      <object class="GnEmptyView">
                      </object>
                      <packing>
                        <property name="name">empty</property>
                      </packing>
                    </child>

                    <child>
                      <object class="GtkScrolledWindow">
                        <signal name="edge-reached" handler="gn_window_load_more_items" swapped="1"/>
                        <child>
                          <object class="GtkFrame">
                            <style>
                             <class name="content-view"/>
                            </style>
                            <child>
                              <object class="GnMainView" id="trash_view">
                                <signal name="item-activated" handler="gn_window_item_activated" swapped="1"/>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                      <packing>
                        <property name="name">non-empty</property>
                      </packing>
                    </child>

                  </object> <!-- ./GtkStack trash_stack -->
                </child>

                <child>
                  <object class="GtkStack" id="search_stack">
                    <property name="visible-child-name" bind-source="search_view"
                              bind-property="content-status" bind-flags="sync-create"/>

                    <!-- Empty Search results -->
                    <child>
                      <object class="GnEmptyView">
                      </object>
                      <packing>
                        <property name="name">empty</property>
                      </packing>
                    </child>

                    <child>
                      <object class="GtkScrolledWindow">
                        <signal name="edge-reached" handler="gn_window_load_more_items" swapped="1"/>
                        <child>
                          <object class="GtkFrame">
                            <style>
                             <class name="content-view"/>
                            </style>
                            <child>
                              <object class="GnMainView" id="search_view">
                                <signal name="item-activated" handler="gn_window_item_activated" swapped="1"/>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                      <packing>
                        <property name="name">non-empty</property>
                      </packing>
                    </child>

                  </object> <!-- ./GtkStack search_stack -->
                </child>

                <child>
                  <object class="GtkFrame" id="editor_stack">
                    <property name="shadow-type">none</property>
                  </object>
                </child>
              </object> <!-- ./GtkStack main_stack -->
            </child>

          </object> <!-- ./GtkOverlay -->
        </child>

        <child>
          <object class="GnActionBar" id="main_action_bar">
            <property name="visible">0</property>
          </object>
        </child>
      </object> <!-- ./GtkBox -->
    </child>
  </template>
</interface>
