<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="gnome-notes">
  <schema id="org.sadiqpk.notes" path="/org/sadiqpk/notes/">

    <key type="b" name="use-system-font">
      <default>true</default>
      <summary>Whether to use system font for notes</summary>
      <description>
        Whether to use the default system font for notes
      </description>
    </key>

    <key type="s" name="font">
      <default>'Cantarell 14'</default>
      <summary>Default font name.</summary>
      <description>
        The default font of the editor
      </description>
    </key>

    <key type="s" name="provider">
      <default>'local'</default>
      <summary>Default provider name.</summary>
      <description>
        The default provider to which new notes will be saved
      </description>
    </key>

    <key type="s" name="color">
      <default>'rgb(239,242,209)'</default>
      <summary>Default note color.</summary>
      <description>
        The default note color will be used for every new note created.
      </description>
    </key>

    <key name="window-maximized" type="b">
      <default>false</default>
      <summary>Window maximized</summary>
      <description>Window maximized state</description>
    </key>

    <key name="window-size" type="(ii)">
      <default>(800, 600)</default>
      <summary>Window size</summary>
      <description>Window size (width, height).</description>
    </key>

    <key name="window-position" type="(ii)">
      <default>(-1, -1)</default>
      <summary>Window position</summary>
      <description>Window position (x, y).</description>
    </key>

  </schema>
</schemalist>
